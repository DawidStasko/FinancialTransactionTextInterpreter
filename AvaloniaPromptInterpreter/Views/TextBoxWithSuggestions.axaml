<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaPromptInterpreter.Views.TextBoxWithSuggestions">

    <Grid Margin="5">
									<TextLayout>
														
									</TextLayout>
        <TextBox Name="TextInput" 
																	TextWrapping="Wrap" 
																	TextChanged="TextInputChanged"/>
									<Popup>
														<Popup Name="SuggestionsPopup" 
																					PlacementTarget="{Binding ElementName=txtInput}" 
																					Placement="Bottom" 
																					Width="auto" 
																					IsOpen="False">
																			<ListBox Name="SuggestionsList"/>
														</Popup>
									</Popup>
    </Grid>

</UserControl>
